@model List<SEDC.PizzaApp.Models.ViewModels.OrderDetailsViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<p>List of orders:</p>

<ol>
@foreach (var order in Model)
{
    <li>
        Pizza Name: @order.PizzaName || Price: @order.Price
        <p><a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id">More Info</a></p>
    </li>
}
</ol>
