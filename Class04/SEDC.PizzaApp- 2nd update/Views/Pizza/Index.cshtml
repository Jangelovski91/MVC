@model List<SEDC.PizzaApp.Models.ViewModels.PizzaViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<partial name="~/Views/Shared/PartialViews/_HelloFromPizzaWorld.cshtml" />

<h2>@ViewData["Title"]</h2>

<ul>
    @foreach (var pizza in Model)
    {
        <li>
            <p>@pizza.PizzaName</p>
            <p><a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.ID">More about @pizza.PizzaName</a></p>
        </li>
    }
</ul>